ssh user@IP                  # Connect to remote server

ssh-keygen                   # Generate SSH key pair

ssh-copy-id user@IP          # Copy SSH key to remote server

cat ~/.ssh/id_rsa.pub        # Display public key

chmod 600 ~/.ssh/id_rsa      # Set proper key permissions

iptables -L                  # List firewall rules

ufw status                   # Check firewall status (Ubuntu)

sudo ufw enable              # Enable firewall

sudo ufw allow 22/tcp        # Allow SSH port
